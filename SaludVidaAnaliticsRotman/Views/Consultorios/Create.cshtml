@model SaludVidaAnaliticsRotman.Models.Consultorio

@{
    ViewData["Title"] = "Crear consultorio";
}

<h1>Registrar consultorio</h1>

<h4>Consultorio</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NombreConsultorio" class="control-label"></label>
                <input asp-for="NombreConsultorio" class="form-control" />
                <span asp-validation-for="NombreConsultorio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumeroConsultorio" class="control-label"></label>
                <input asp-for="NumeroConsultorio" class="form-control" />
                <span asp-validation-for="NumeroConsultorio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Registrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
