@model IEnumerable<SaludVidaAnaliticsRotman.Models.Medico>

@{
    ViewData["Title"] = "Administración de médicos";
}

<h1>Administración de médicos</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Agregar Médico</a>
</p>
<table class="table table-primary">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombreMedico)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellido1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellido2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumeroLicenciaMedica)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Identificacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdEspecialidadNavigation.NombreEspecialidad)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreMedico)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellido1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellido2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumeroLicenciaMedica)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Identificacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdEspecialidadNavigation.NombreEspecialidad)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.IdMedico">Editar</a> |
                    <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.IdMedico">Detalle</a> |
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.IdMedico">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
