@model IEnumerable<SaludVidaAnaliticsRotman.Models.Especialidade>

@{
    ViewData["Title"] = "Administrar especialidades";
}

<h1>Administrar especialidades</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Agregar especialidad</a>
</p>
<table class="table table-primary">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombreEspecialidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreEspecialidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdEspecialidad" class="btn btn-warning">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.IdEspecialidad" class="btn btn-primary">Detalle</a> |
                    <a asp-action="Delete" asp-route-id="@item.IdEspecialidad" class="btn btn-danger">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
