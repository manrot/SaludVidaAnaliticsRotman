@model SaludVidaAnaliticsRotman.Models.RelacionConsultorioEspecialidade

@{
    ViewData["Title"] = "Crear";
}

<h1>Asignar especialidad a consultorio</h1>

<h4>Relacionar especialidad con un consultorio</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdConsultorio" class="control-label">Consultorio</label>
                <select asp-for="IdConsultorio" class ="form-control" asp-items="ViewBag.IdConsultorio"></select>
            </div>
            <div class="form-group">
                <label asp-for="IdEspecialidad" class="control-label">Especialidad</label>
                <select asp-for="IdEspecialidad" class ="form-control" asp-items="ViewBag.IdEspecialidad"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
