@model IEnumerable<SaludVidaAnaliticsRotman.Models.RelacionConsultorioEspecialidade>

@{
    ViewData["Title"] = "Administrar especialidades de los consultorios";
}

<h1>Administrar especialidades de los consultorios</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Agregar especialidad a consultorio</a>
</p>
<table class="table table-primary">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdConsultorioNavigation.NombreConsultorio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdEspecialidadNavigation.NombreEspecialidad)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdConsultorioNavigation.NombreConsultorio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdEspecialidadNavigation.NombreEspecialidad)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.IdRelacion" class="btn btn-warning">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.IdRelacion" class="btn btn-primary">Detalle</a> |
                    <a asp-action="Delete" asp-route-id="@item.IdRelacion" class="btn btn-danger">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
